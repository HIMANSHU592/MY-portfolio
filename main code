      document.getElementById('yr').textContent = new Date().getFullYear();

      // Smooth small keyboard focus: make avatar keyboard accessible
      const avatar = document.querySelector('.avatar');
      avatar.setAttribute('tabindex','0');

      // Minimal accessibility: skip to projects if pressing Enter on primary CTA
      document.querySelectorAll('.btn.primary').forEach(btn=>{
        btn.addEventListener('keydown', (e)=>{ if(e.key === 'Enter') location.hash = '#projects'; });
